<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd" version="3.1">
  <display-name>Presentation</display-name>
  <welcome-file-list>
    <welcome-file>Connexion</welcome-file>
  </welcome-file-list>
  <servlet>
    <servlet-name>Connexion</servlet-name>
    <servlet-class>controller.Connexion</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Connexion</servlet-name>
    <url-pattern>/Connexion</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Accueil</servlet-name>
    <servlet-class>controller.Accueil</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Accueil</servlet-name>
    <url-pattern>/Accueil</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>CreerPartie</servlet-name>
    <servlet-class>controller.CreerPartie</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>CreerPartie</servlet-name>
    <url-pattern>/CreerPartie</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>RejoindrePartie</servlet-name>
    <servlet-class>controller.RejoindrePartie</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>RejoindrePartie</servlet-name>
    <url-pattern>/RejoindrePartie</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Jouer</servlet-name>
    <servlet-class>controller.Jouer</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Jouer</servlet-name>
    <url-pattern>/Jouer</url-pattern>
  </servlet-mapping>
  <listener>
    <listener-class>controller.JMSContextListener</listener-class>
  </listener>
  <resource-ref>
    <description>sender queue</description>
    <res-ref-name>sender</res-ref-name>
    <res-type>org.apache.activemq.command.ActiveMQQueue</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
  <resource-ref>
    <description>receiver queue</description>
    <res-ref-name>receiver</res-ref-name>
    <res-type>org.apache.activemq.command.ActiveMQQueue</res-type>
    <res-auth>Container</res-auth>
  </resource-ref>
</web-app>